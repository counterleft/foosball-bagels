- if flash[:notice]
  %div.alert.alert-success
    %button.close(data-dismiss="alert") &times;
    %p= flash[:notice]

%p
  %b Baked On:
  = @bagel.baked_on_display

%p
  %b Owner:
  = link_to @bagel.owner.name, @bagel.owner

%p
  %b Teammate:
  = link_to @bagel.teammate.name, @bagel.teammate

%p
  %b Offensive Opponent:
  = link_to @bagel.opponent_1.name, @bagel.opponent_1

%p
  %b Defensive Opponent:
  = link_to @bagel.opponent_2.name, @bagel.opponent_2
