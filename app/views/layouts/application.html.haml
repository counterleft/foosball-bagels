!!!

%html
  %head
    %meta(http-equiv="content-type" content="text/html;charset=UTF-8")
    %meta(name="author" lang="en" content="Brian Mathiyakom; http://brian.rarevisions.net")
    %meta(name="copyright" lang="en" content="Brian Mathiyakom; http://brian.rarevisions.net")
    %meta(name="robots" content="none")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title Bagel Central
    = stylesheet_link_tag "application"
    = yield :head

  %body
    %div.container
      %header
        %div.thumbnail
          = yield :header_image

      %nav.navbar.navbar-default(role="navigation")
        %div.navbar-header
          %button.navbar-toggle(type="button" data-toggle="collapse" data-target="#navbar")
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar

          %a.navbar-brand{:href => "#{root_path}", :title => "Bagel Central"} Bagel Central

        #navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav.pull-right
            %li#players-nav-link= link_to 'Players', players_path
            %li#bagels-nav-link= link_to "Bagels", bagels_path
            %li#new-bagel-nav-link.last= link_to "Add Bagel", new_bagel_path

      %section
        = yield

      %footer
        %small Made with <span class="glyphicon glyphicon-heart"></span> by <a href="http://brian.rarevisions.net">Brian Mathiyakom</a>.  <span class="pull-right"><a href="http://rarevisions.net">rareVisions</a></span>

    = javascript_include_tag "application"
    - if @active_nav_link
      :javascript
        $("##{@active_nav_link}").addClass("active");
    = yield :page_js
