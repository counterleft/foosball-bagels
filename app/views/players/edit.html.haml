- content_for :header_image do
  = image_tag("legos.png", alt: "Lego Blocks")

%h1= "Editing #{@player}"

= form_for @player do |f|
  = error_messages_for class: "error-text", header_message: "Don't look now, but you gave me bad input."

  %div.row
    %div.span4
      %div.control-group
        = f.label :name, "Name"
        = f.text_field :name

  %div.row
    %div.span4
      %div.control-group
        = f.label :surname, "Surname"
        = f.text_field :surname

  %div.row
    %div.span4
      %div.control-group
        = f.label :active, "#{f.check_box :active, "data-toggle" => "checkbox"} Still Active?".html_safe, class: "checkbox"

  %div.row
    %div.span4
      = f.button "Update Player", class: "btn btn-primary btn-large"
